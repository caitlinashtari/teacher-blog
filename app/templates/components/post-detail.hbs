<div class="row">
  <div class="col s3">
    <img class="responsive-img" src="{{post.image}}" alt="{{post.description}}">
  </div>
  <div class="col s9">
    <p>{{post.content}}</p>
  </div>
</div>

<h2>Comments</h2>
{{#each post.comments as |comment|}}
  {{comment-tile comment=comment}}
{{/each}}

<button {{action 'delete' post}}>Delete</button>
